{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
